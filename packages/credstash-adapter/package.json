{
    "name": "@secretary/credstash",
    "description": "Credstash adapter for Secretary",
    "version": "1.0.1-alpha.3",
    "repository": {
        "type": "github",
        "url": "https://github.com/secretarysecrets/node-credstash"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "lint": "tslint --config tslint.json --project tsconfig.json -t stylish --fix",
        "test": "nyc mocha",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && npx codecov"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    },
    "author": "Aaron Scherer <aequasi@gmail.com>",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "@secretary/core": "^1.0.1-alpha.3"
    },
    "peerDependencies": {
        "nodecredstash": "^2.0.2"
    },
    "gitHead": "8a63a6c74c7141a4a6d0d28bb3ce0c45ca0a9398"
}
