{
    "name": "@secretary/credstash",
    "description": "Credstash adapter for Secretary",
    "version": "1.0.0-alpha.0",
    "repository": {
        "type": "github",
        "url": "https://github.com/secretarysecrets/node-credstash"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "lint": "tslint --config tslint.json --project tsconfig.json -t stylish --fix",
        "test": "nyc mocha",
        "coverage": "nyc report --reporter=text-lcov > coverage.lcov && npx codecov"
    },
    "nyc": {
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "reporter": [
            "text"
        ],
        "all": true
    },
    "author": "Aaron Scherer <aequasi@gmail.com>",
    "license": "MIT",
    "dependencies": {
        "@secretary/core": "file:../core"
    },
    "peerDependencies": {
        "nodecredstash": "^2.0.2"
    }
}
